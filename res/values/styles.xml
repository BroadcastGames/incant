<?xml version="1.0" encoding="utf-8"?>
<resources>
  <color name="inputtext">#acf</color>
  <color name="text">#fff</color>
  <color name="background">#000</color>

  <style name="inputtext">
    <item name="android:textColor">@color/inputtext</item>
    <item name="android:typeface">monospace</item>
  </style>

  <style name="storynamestyle" parent="@android:style/TextAppearance">
    <item name="android:textSize">18dp</item>
  </style>

  <style name="storytitle" parent="@style/storynamestyle">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="storyauthor" parent="@style/storynamestyle">
    <item name="android:textColor">#ccc</item>
  </style>

  <style name="storyheadline" parent="@style/storynamestyle">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="storydescriptionstyle" parent="@android:style/TextAppearance">
    <item name="android:textSize">12dp</item>
  </style>

  <style name="storydescription" parent="@style/storydescriptionstyle">
    <item name="android:textColor">#aaa</item>
  </style>

  <style name="storysavetime" parent="@style/storydescriptionstyle">
    <item name="android:textColor">#696</item>
  </style>

  <style name="storydownloadtime" parent="@style/storydescriptionstyle">
    <item name="android:textColor">#666</item>
  </style>
</resources>
